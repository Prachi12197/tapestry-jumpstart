	<t:tabGroup>
		<t:sourcecodetab src="/web/src/main/java/jumpstart/web/pages/examples/tables/AlternatingGrid.tml"/>
		<t:sourcecodetab src="/web/src/main/java/jumpstart/web/pages/examples/tables/AlternatingGrid.java"/>
		<t:sourcecodetab src="/web/src/main/resources/META-INF/assets/css/examples/tables/alternatinggrid.css"/>
		<t:sourcecodetab src="/web/src/main/java/jumpstart/web/commons/EvenOdd.java"/>
	</t:tabGroup>
