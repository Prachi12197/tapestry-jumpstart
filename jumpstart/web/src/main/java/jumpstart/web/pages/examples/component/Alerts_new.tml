			<div class="form-group">
				<t:label class="col-sm-3" for="duration"/>:
				<div class="col-sm-6">
					<t:RadioGroup t:id="duration" value="duration" validate="required">
						<t:Radio t:id="durationS" value="Duration.SINGLE" label="Single"/>
						<t:label for="durationS"/>&nbsp;
						<t:Radio t:id="durationT" value="Duration.TRANSIENT" label="Transient (15 seconds)"/>
						<t:label for="durationT"/>&nbsp;
						<t:Radio t:id="durationU" value="Duration.UNTIL_DISMISSED" label="Until Dismissed"/>
						<t:label for="durationU"/>&nbsp;
					</t:RadioGroup><br/>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-6">
					<t:label for="severity"/>:
				</div>
				<div class="col-sm-6">
					<t:RadioGroup t:id="severity" validate="required">
						<label class="radio-inline">
							<t:Radio t:id="severityI" value="Severity.INFO" label="Info"/>
							Info
						</label>
						<t:Radio t:id="severityW" value="Severity.WARN" label="Warn"/><t:label for="severityW"/>&nbsp;
						<t:Radio t:id="severityE" value="Severity.ERROR" label="Error"/><t:label for="severityE"/>&nbsp;
					</t:RadioGroup><br/>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-3" for="quantity"/>:
				<div class="col-sm-6">
					<t:RadioGroup t:id="quantity" validate="required">
						<t:label class="radio-inline" for="quantity1">
							<t:Radio t:id="quantity1" value="literal:1" label="1"/>
						</t:label>
						<t:label class="radio-inline" for="quantity2">
							<t:Radio t:id="quantity2" value="literal:2" label="2"/>
						</t:label>
						<t:label class="radio-inline" for="quantity3">
							<t:Radio t:id="quantity3" value="literal:3" label="3"/>
						</t:label>
					</t:RadioGroup><br/>
				</div>
			</div>
			<div class="form-group">
				<t:label class="col-sm-3" for="showDismiss"/>:
				<div class="col-sm-6">
					<t:RadioGroup t:id="showDismiss" validate="required">
						<label class="radio-inline">
							<t:Radio t:id="showDismissY" value="literal:true" label="Yes"/>
							<t:label for="showDismissY"/>
						</label>
						<label class="radio-inline">
							<t:Radio t:id="showDismissN" value="literal:false" label="No"/>
							<t:label for="showDismissN"/>
						</label>
					</t:RadioGroup><br/>
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-sm-6 col-sm-offset-3">
					<input type="submit" value="Submit" class="btn btn-primary"/> 
				</div>
			</div>
		</t:form>

		<div class="alert-area">
			<t:alerts/>
		</div>
		
	</div> 

